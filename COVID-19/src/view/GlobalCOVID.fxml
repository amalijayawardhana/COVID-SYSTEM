        <TextField fx:id="txtDeaths" alignment="CENTER" layoutX="19.0" layoutY="294.0" prefHeight="28.0" prefWidth="189.0" promptText="Deaths" />
        <Button fx:id="btnUpdate" layoutX="22.0" layoutY="360.0" mnemonicParsing="false" onAction="#btnUpdate_OnAction" text="Update" textFill="BLUE">
